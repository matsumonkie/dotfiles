# bin in subdirectories of /opt and ~/.bin
myBin=$('ls' -d /opt/**/bin | tr '\n' ':')
PATH="$PATH:$myBin"
myBin=$('ls' -d ~/.bin/**/bin | tr '\n' ':')
PATH="$PATH:$myBin"

# personnal bin
PATH="$PATH:$HOME/.bin"

# SBT
PATH="$PATH:/opt/sbt:/opt/play"

# Heroku
export PATH="/usr/local/heroku/bin:$PATH"

# RVM
PATH="$PATH:$HOME/.rvm/bin"

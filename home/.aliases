# Zsh
# No auto correct
unsetopt correct
unsetopt correct_all

# System
alias -g G='| grep'
alias -g L='| less'
alias -g A='| a'

alias -g B='&& notify-send "\(^o^)/"'
alias rm='trash'
alias copy='xclip -selection clipboard'
alias paste='xclip -o'
alias tree='~/.bin/tree'
alias r='exec $SHELL -l'
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

function f {
    find . -iname "*$1*"
}

# Emacs
alias e='emacs -nw'
alias a='ack-grep'

# Git
alias gs='git status -s'
alias gg="git log --pretty=oneline -n 20 --graph --abbrev-commit"
alias gga="git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
alias gcam='git commit --amend -C HEAD'

# Keyboard
alias bd='~/.kbd/kbd.rb'
alias n='setxkbmap fr'
alias bepo='xkbcomp -w 0 -R/usr/share/X11/xkb ~./kbd/vaio_bepo $DISPLAY'

# Ruby
alias ge='gem environment'
alias b='bundle'

function be {
  bundle exec "$1"
}
function bu {
  bundle update "$1"
}
function bl {
    bundle list
}

alias rs='rails server'
alias rc='rails console'